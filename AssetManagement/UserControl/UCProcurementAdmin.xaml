        <TextBox x:Name="txb_ImageProcurement" HorizontalAlignment="Left" Height="18" Margin="271,102,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="101" Background="{x:Null}"/>
        <Button x:Name="btn_ChooseImage" Content="Choose" HorizontalAlignment="Left" Margin="377,102,0,0" VerticalAlignment="Top" Width="69" Height="18" Background="#FF0FA4DC"/>

                    </StackPanel>
                </ControlTemplate>
            </Button.Template>
        </Button>
        <TextBlock x:Name="txt_ProcurementId" HorizontalAlignment="Left" Margin="168,34,0,0" TextWrapping="Wrap" Text="Procurement Id" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="txb_ProcurementId" HorizontalAlignment="Left" Height="18" Margin="271,32,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}"/>

        <TextBox x:Name="txb_ImageProcurement_Copy" HorizontalAlignment="Left" Height="18" Margin="271,125,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}"/>
        <TextBlock x:Name="txt_TypeItemProcurement" HorizontalAlignment="Left" Margin="168,149,0,0" TextWrapping="Wrap" Text="Type Item" VerticalAlignment="Top" FontSize="12"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="271,148,0,0" VerticalAlignment="Top" Width="120" Height="18"/>
        <TextBlock x:Name="txt_StockProcurement" HorizontalAlignment="Left" Margin="168,173,0,0" TextWrapping="Wrap" Text="Stock" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="txb_StockProcurement" HorizontalAlignment="Left" Height="18" Margin="271,171,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}"/>
        <TextBlock x:Name="txt_PriceProcurement" HorizontalAlignment="Left" Margin="168,196,0,0" TextWrapping="Wrap" Text="Price" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="txb_PriceProcurement" HorizontalAlignment="Left" Height="18" Margin="271,194,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}"/>
        <TextBlock x:Name="txt_QuantityProcurement" HorizontalAlignment="Left" Margin="168,218,0,0" TextWrapping="Wrap" Text="Quantity" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="txb_QuantityProcurement" HorizontalAlignment="Left" Height="18" Margin="271,217,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120" Background="{x:Null}"/>
        <TextBlock x:Name="txt_DescriptionProcurement" HorizontalAlignment="Left" Margin="168,260,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" FontSize="12"/>
        <TextBox x:Name="txb_DescriptionProcurement" HorizontalAlignment="Left" Height="65" Margin="271,240,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175" Background="{x:Null}"/>
        <Button x:Name="btn_SendProcurement" Content="Send" HorizontalAlignment="Left" Margin="391,321,0,0" VerticalAlignment="Top" Width="75" Click="btn_SendProcurement_Click" Background="#FF3357F5"/>

